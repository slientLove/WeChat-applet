.headImg{
  width: 100%;
  height: 460rpx;
}
.views{
  display: flex;
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}
.views image{
  margin-top: 2rpx;
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-right: 10px;
}
.views text{
  font-size: 16px;
  margin-right: 5px;
  vertical-align: middle;
  color: #333;
}
.title{
  display: inline-block;
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}
.bar{
  margin-top: 20rpx;
  height: 90rpx;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
}
.bar-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.bar-img image{
  width: 90rpx;
  height: 90rpx;
}
.bar-img image:nth-child(2){
  margin-left: 30rpx;
}
.horizon{
  width: 100%;
  height: 1rpx;
  background: #e5e5e5;
  vertical-align: middle;
  z-index: -100;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
}
.detail{
  clear: both;
  color: #666;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  margin: 0 auto;
  margin-left: 20rpx;
  margin-bottom: 40rpx;
}
.detail text{
  margin: 0 auto;
}
.music{
  width: 100rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -50rpx;
  top: 160rpx;
  opacity: 0.5;
}