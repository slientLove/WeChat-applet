
@import "../movie-start/movie-template.wxss";
.detail-wrap{
  display: flex;
  flex-direction: column;
}
  .large-img{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);  /* 显示模糊度 */
}   
.head-detail{
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size: 20px;
  font-weight: bold;
  color: #fff;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2rpx;
}
.year{
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.like-count{
  color: #f21146;
  margin-right: 10rpx;
  font-size: 22rpx;
}
.people{
  color: #666;
  margin-right: 30rpx;
  font-size: 22rpx;
}
.movie-img{
  width: 238rpx;
  height: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}
.summary{
  margin-left: 40rpx;
  margin-top: 30rpx;
  color: #777;
}
.origin-title{
  color: #1f3463;
  font-weight: bold;
  font-size: 24rpx;
  margin-bottom: 40rpx;
}
.common{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  font-size: 22rpx;
  width: 100%;
}
.mark{
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}
.hr{
  margin-top: 45rpx;
  width: 95%;
  height: 1rpx;
  background: #d9d9d9;
}
.synopsis{
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  font-size: 22rpx;
}
.synopsis-font{
  color: #999;
}
.synopsis-content{
  margin-right: 40rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.cast{
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  font-size: 22rpx;
}
.cast-font{
  color: #999;
  margin-bottom: 40rpx;
}
.scroll-wrap{
  white-space: nowrap;
}
.img-container{
   display: inline-flex;
   flex-direction: column;
   margin-right:40rpx;
   margin-bottom: 50rpx;
   width: 170rpx;
   text-align: center;
   white-space: normal;
}
.cast-img{
  width: 170rpx;
  height: 210rpx;
}
.cast-name{
  margin: 10rpx auto 0;
}
